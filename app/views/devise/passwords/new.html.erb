<div class="container" style="height: 70vh; display: flex; align-items: center; justify-content: center;">
  <div style="width: 400px; height: min-content;padding: 20px;border-radius: 12px;">
    <h1 style="font-size: 23px; margin-bottom: 25px;">Are you having trouble signing in?</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), style: "font-size: 15px;", html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label "Please enter your RubyBlog ID to get started.", class: "form-label" %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions mt-3 mb-3">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


