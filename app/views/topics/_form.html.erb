<%= form_with(model: topic) do |form| %>
  <% if topic.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <% topic.errors.each do |error| %>
        <div class="alert alert-info">
          <%= error.full_message %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="container">
    <div class="mb-3">
      <%= form.label :title, style: "display: block", class: "form-label" %>
      <%= form.text_field :title, :required => true, class: "form-control", :required => true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, style: "display: block", class: "form-label" %>
      <%= form.text_area :description, :required => true, class: "form-control", :rows=>10, :required => true %>
    </div>

    <%= form.submit :"Submit", class: "btn btn-success" %>
    <%= link_to "Back to topics", topics_path, class: "btn btn-success" %>
  </div>
<% end %>
