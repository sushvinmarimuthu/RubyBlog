<section style="background-color: #f2f3e8;">

  <div class="container">
    <%= render @topic %>


    <div class="row align-items-center pb-3 justify-content-center">
      <div class="col">
        <%= link_to "Back to topics", topics_path, class: "btn btn-success" %>
      </div>
      <div class="col d-flex justify-content-center">
        <%= link_to "Edit this topic", edit_topic_path(@topic), class: "btn btn-success" %>
      </div>
      <div class="col d-flex justify-content-center">
        <%= link_to "Show all posts in #{@topic.title}", topic_posts_path(@topic), class: "btn btn-success" %>
      </div>
      <div class="col">
        <%= button_to "Delete this topic", @topic, method: :delete, class: "btn btn-danger float-end"  %>
      </div>
    </div>
  </div>
</section>



